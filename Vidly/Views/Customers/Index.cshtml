@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>

@if (Model.Count() == 0)
{
    <text>There are no registered customers.</text>
}
else
{
    <table class="table table-bordered table-hover table-striped">
        <tr>
            <th>
                Customer
            </th>
        </tr>

        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(customer.Name, "Details", new { customer.Id })
                </td>
            </tr>
        }

    </table>
}

