@model Vidly.Models.Movie

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>

<div>

    <ul>
        <li>Genre: @Model.Genre.Name</li>
        <li>Release Date: @Model.ReleasedDate.Value.ToLongDateString()</li>
        <li>Date Added: @Model.DateAdded.Value.ToLongDateString()</li>
        <li>Number in Stock: @Model.NumberInStock</li>
    </ul>
 </div>